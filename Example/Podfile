source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

def windguru
  pod 'JFWindguru', :path => '../',
  :testspecs => ['Tests']
end

target 'JFWindguru_Example' do
  platform :ios, '12.0'
  windguru

  target 'JFWindguru_Tests' do
    inherit! :search_paths
  end
end

target 'JFWindguru Extension' do
  platform :watchos, '5.2'
  windguru
end


target 'JFWindguruTVOS' do
  platform :tvos, '12.0'
  windguru
end


target 'JFWindguruMacOS' do
  platform :macos, '10.14'
  windguru
end


